    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function showApplicantDetails(firstName, lastName, career, age, gender, education, experience, gpa) {
            document.getElementById('applicantFirstName').textContent = firstName;
            document.getElementById('applicantLastName').textContent = lastName;
            document.getElementById('careerName').textContent = career;
            document.getElementById('applicantAge').textContent = age;
            document.getElementById('applicantGender').textContent = gender;
            document.getElementById('applicantEducation').textContent = education;
            document.getElementById('yearsOfExperience').textContent = experience;
            document.getElementById('applicantGPA').textContent = gpa;
        }
    </script>
