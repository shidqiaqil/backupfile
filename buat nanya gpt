    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Fungsi untuk mengisi modal dengan deskripsi career
        function setCareerDetails(careerDesc) {
            if (careerDesc) {
                document.getElementById("careerDesc").innerText = careerDesc;
            } else {
                document.getElementById("careerDesc").innerText = "No description available.";
            }
        }

        function confirmDelete() {
            return confirm("Are you sure you want to delete this job posting?");
        }
    </script>
