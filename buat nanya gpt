Schema::create('career_registration', function (Blueprint $table) {
            $table->id();
               $table->string('career_name', 150);
               $table->string('reg_fname', 150);
               $table->string('reg_lname', 150);
               $table->string('reg_gender', 10);
               $table->string('reg_age', 10);
               $table->longText('reg_address');
               $table->string('reg_city', 50);
               $table->string('reg_phone', 15);
               $table->string('reg_email', 100);
               $table->string('reg_education', 50);
               $table->string('reg_institute', 150);
               $table->string('reg_fieldstudy', 100);
               $table->string('reg_gradeyear', 20);
               $table->string('reg_gpa', 10);
               $table->string('reg_workxp', 50);
               $table->string('reg_industry', 150);
               $table->string('reg_file', 100);
               $table->date('date');
               $table->string('career_id', 11);
               $table->date('birth_date')->nullable();
               $table->string('place_birth', 150)->nullable();
               $table->string('province', 150)->nullable();
            $table->timestamps();
