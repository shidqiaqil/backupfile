                                    <!-- Tombol Delete -->
                                    <form action="{{ route('careers.destroy', $career->id) }}" method="POST" style="display: inline;">
                                        @csrf
                                        @method('DELETE')
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirmDelete()">
                                            <i class="bi bi-trash"></i> Delete
