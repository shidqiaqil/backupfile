    <script>
        function toggleBadgeStatus(element) {
            if (element.classList.contains('open')) {
                element.classList.remove('open');
                element.classList.add('closed');
                element.textContent = 'Closed';
                element.setAttribute('aria-label', 'Status Closed');
            } else {
                element.classList.remove('closed');
                element.classList.add('open');
                element.textContent = 'Open';
                element.setAttribute('aria-label', 'Status Open');
            }
            // Tambahkan AJAX/fetch untuk update status ke backend jika perlu
        }

    </script>
