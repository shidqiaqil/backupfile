    <script>
        function showApplicantDetails(name, career, age, education, experience, gpa) {
            document.getElementById('applicantName').textContent = name;
            document.getElementById('careerName').textContent = career;
            document.getElementById('applicantAge').textContent = age;
            document.getElementById('applicantEducation').textContent = education;
            document.getElementById('yearsOfExperience').textContent = experience;
            document.getElementById('applicantGPA').textContent = gpa;
        }
